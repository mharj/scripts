[Unit]
Description=etcd key-value store
Documentation=https://github.com/coreos/etcd
After=network.target docker.service

[Service]
EnvironmentFile=/etc/default/etcd
ExecStartPre=/bin/sh -c 'docker stop etcd 2>/dev/null'
ExecStartPre=/bin/sh -c 'docker rm etcd 2>/dev/null'
ExecStart=/usr/bin/docker run --env-file=/etc/default/etcd --net=host --name etcd quay.io/coreos/etcd:v2.3.6
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
